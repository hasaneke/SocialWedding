<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:gravity="center">
    <ImageView
        android:id="@+id/wedding_item_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wedding_item_couple_names"
        android:text="Couple Names"
        android:layout_gravity="start"
        android:textSize="22sp"
        android:layout_marginTop="12dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wedding_item_messages"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="Messagess asdsdas
        dasdadsaasdsadsadsadsadsdasdasdsadsasadas"
        android:layout_gravity="start"
        android:textSize="12sp"/>
    <LinearLayout
        android:paddingTop="8dp"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/wedding_like_count"
            android:drawablePadding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="@string/like"
            app:drawableStartCompat="@drawable/ic_outline_thumb_up_24" />
        <TextView
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:drawablePadding="4dp"
            android:textColor="@color/black"
            android:text="@string/comment"
            app:drawableStartCompat="@drawable/ic_outline_mode_comment_24" />
    </LinearLayout>
</LinearLayout>